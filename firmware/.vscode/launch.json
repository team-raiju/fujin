{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "stlink",
            "cwd": "${workspaceRoot}",
            "gdbPath": "arm-none-eabi-gdb",
            "executable": "${workspaceFolder}/build/STM32G474-Debug/fujin.elf",
            "name": "Cortex Debug (ST-Link)",
            "device": "STM32G474RC",
            "v1": false,
            "runToEntryPoint": "main",
            "svdFile": "./STM32G474xx.svd"
            // In cortex-debug extension current pre release version (1.11.2),
            // Remove next line comments to enable liveWatch viewer
            // "liveWatch": {
            //     "enabled": true,
            //     "samplesPerSecond": 4
            // }
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/PC/fujin.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}
